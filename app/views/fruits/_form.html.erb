<%= form_for(@fruit) do |f| %> 

  
  <div class="field">
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :colour %><br />
    <%= f.text_field :colour %>
  </div>
  <div class="field">
    <%= f.label :image_url %><br />
    <%= f.text_field :image_url %>
  </div>
  <div class="field">
    <%= f.label :prickly %><br />
    <%= f.check_box :prickly %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
